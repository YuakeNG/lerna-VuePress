{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "0.0.4",
  "packages": [
    "packages/*"
  ],
  "npmClient": "pnpm",
  "publishConfig": {
    "access": "public"
  },
  "command": {
    "publish": {
      "npmClient": "npm",
      "message": "chore(release): publish %s",
      "registry": "https://registry.npmjs.org"
    },
    "packages": [
      "packages/* "
    ]
  }
}
